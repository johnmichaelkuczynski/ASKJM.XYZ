modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["python_anthropic_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "psmisc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flask-app"

[[workflows.workflow]]
name = "flask-app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 39363
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["python", "app.py"]
